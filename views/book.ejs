
<form style="padding-top: 100px;" action="/book" method="POST" class="container" >
    <% if(messages.error){%>
        <span ><%= messages.error%></span>
        <%}%>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputEmail4">Date Of Birth</label>
        <input type="date" name="date" class="form-control" id="inputEmail4">
      </div>
      <div class="form-group col-md-4">
        <label for="inputState">Child Name</label>
        <input type="Text" name="time" class="form-control" id="inputEmail4">
        <!-- <select id="inputState" name="time" class="form-control">
          <option selected>8am-11am</option>
          <option>1pm-3pm</option>
          <option>5pm-8pm</option>
        </select> -->
      </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputState">Place OF Vaccination</label>
            <select id="inputState" name="doctor" class="form-control">
              <option selected>Sub Center</option>
              <option>Primary Health Care Center</option>
              <option>Community Health Center</option>
              <option>Private Hospital</option>
            </select>
          </div>
    </div>
    
    <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" value="<%=messages.address%>" name="address" id="inputAddress" placeholder="1234 Main St">
    </div>
</div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputCity">City</label>
        <input type="text" class="form-control" value="<%=messages.city%>" name="city" id="inputCity">
      </div>
      <div class="form-group col-md-4">
        <label for="inputPhone">Mobile no.</label>
        <input type="text" class="form-control" value="<%=messages.mobile%>" name="mobile" id="inputCity">
      </div>
    
    
    
    </div>
    <div class="form-group">
        
            <label for="exampleFormControlFile1"></label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
          
    </div>
    <% if(user) { %>
    <button type="submit" class="btn btn-dark">Book</button>
   
  </form>
  <%}else{%>
    <a href="/login" style="text-decoration:none;">Login</a>
    <%}%>